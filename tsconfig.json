{
  "compilerOptions": {
    "target": "es2016",
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*.tsx", "**/*.ts"],
  "exclude": ["dist", "build", "node_modules", "tailwind.config.ts", "tsup.config.ts", "vitest.config.ts"]
}
